        function switchToChat(chatId) {
            currentChatId = chatId;
            const chat = chats.find(c => c.id === chatId);
            
            if (!chat) return;
            
            // Update active state
            document.querySelectorAll('.chat-item').forEach(item => {
                item.classList.toggle('active', parseInt(item.dataset.chatId) === chatId);
            });
            
            // Clear and render messages
            chatArea.innerHTML = '';
            const chatSection = document.querySelector('.chat-section');
            
            if (chat.messages.length === 0) {
                chatSection.classList.remove('has-messages');
            } else {
                chatSection.classList.add('has-messages');
                chat.messages.forEach(msg => {
                    addMessageToUI(msg.content, msg.role, msg.source, msg.questions, false);
                });
            }
        }

        function renderChats() {
            chatsContainer.innerHTML = '';
            
            chats.forEach(chat => {
                const div = document.createElement('div');
                div.className = 'chat-item';
                div.dataset.chatId = chat.id;
                
