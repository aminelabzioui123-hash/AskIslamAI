        function loadChatsFromStorage() {
            try {
                const saved = localStorage.getItem('islamicChats');
                if (saved) {
                    chats = JSON.parse(saved);
                }
            } catch (e) {
                console.error('Failed to load chats:', e);
                chats = [];
            }
        }

